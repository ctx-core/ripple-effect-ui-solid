{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"declaration": true,
		"declarationDir": "lib",
		"esModuleInterop": true,
		"importsNotUsedAsValues": "error",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
		"lib": ["ESNext", "dom"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "lib",
		"resolveJsonModule": true,
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"typeRoots": ["node_modules/@types"]
	},
	"exclude": [
		"node_modules",
		"lib"
	],
	"references": []
}
